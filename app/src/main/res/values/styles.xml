<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorMain">@color/colorPrimary</item>
        <item name="colorMainContrast">@color/colorPrimaryDark</item>
        <item name="colorBorder">@color/colorBorder</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">?attr/colorMainContrast</item>
        <item name="background">@drawable/background</item>
        <item name="bell">@drawable/bell_states</item>
    </style>
    <style name="MainThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorMain">@color/colorPrimaryDark</item>
        <item name="colorMainContrast">@color/colorPrimary</item>
        <item name="colorBorder">@color/colorBorderDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">?attr/colorMainContrast</item>
        <item name="background">@drawable/background</item>
        <item name="bell">@drawable/bell_states</item>
    </style>

    <!-- Main -->
    <style name="MainItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/main_item_box</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Settings -->
    <style name="SettingsEntry">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="SettingsTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SettingsSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_weight">0</item>
    </style>

    <!-- Game -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">?attr/colorMainContrast</item>
        <item name="android:background">?attr/colorMain</item>
    </style>
    <!-- attributes -->
    <attr name="colorMain" format="color"/>
    <attr name="colorMainContrast" format="color"/>
    <attr name="colorBorder" format="color"/>
    <attr name="iconA" format="reference"/>
    <attr name="iconB" format="reference"/>
    <attr name="iconC" format="reference"/>
    <attr name="iconD" format="reference"/>
    <attr name="background" format="reference"/>
    <attr name="bell" format="reference"/>
</resources>
